<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.hoopsmusic">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/basketball"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/basketball"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DiscoverActivity"
            android:label="@string/section_discover" />
        <activity
            android:name=".PlaylistActivity"
            android:label="@string/section_playlist" />

        <activity
            android:name=".RadioActivity"
            android:label="@string/section_radio" />
        <activity
            android:name=".NowPlayingActivity"
            android:label="@string/section_now_playing" />
    </application>

</manifest>